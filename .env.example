# MongoDB Connection URI
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_URI=mongodb+srv://username:password@your-cluster.mongodb.net/?appName=YourApp

# Server port
PORT=5000

# JWT Secret key for token generation (use a strong, random string in production)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Node environment (development, production, test)
NODE_ENV=development

# MongoDB credentials (used if running MongoDB in Docker)
MONGO_USER=admin
MONGO_PASSWORD=change_me_in_production
